---
import type { CollectionEntry } from 'astro:content'
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import BlogPostContent from '../components/BlogPostContent.astro'

type Props = { post: CollectionEntry<'blog'> }

const { post } = Astro.props
---

<html lang='en'>
	<head>
		<BaseHead title={post.data.title} description={post.data.description ?? post.data.title} />
	</head>

	<body>
		<Header />
		<main class='flex items-center justify-center flex-col p-4 w-full'>
			<BlogPostContent post={post}>
				<slot />
			</BlogPostContent>
		</main>
		<Footer />
	</body>
</html>
